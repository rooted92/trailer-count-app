<%- include('../partials/head') %>
<%- include('../partials/navbar') %>

<div class="container mx-auto mt-8 p-6 bg-white shadow-lg rounded-lg">
  <h1 class="text-4xl font-bold text-gray-800 mb-4">Trailer #<%= trailerDetails.trailerNumber %></h1>
  <h2 class="text-2xl text-gray-600 mb-2"><%= trailerDetails.type %></h2>
  <p class="text-lg text-gray-700 mb-2">Cleanliness: <%= trailerDetails.cleanlinessStatus %></p>
  <p class="text-lg text-gray-700 mb-2">Load Status: <%= trailerDetails.loaded ? 'Loaded' : 'Empty' %></p>
  <% if (trailerDetails.type === 'Reefer') { %>
    <p class="text-lg text-gray-700 mb-2">Fuel Level: <%= trailerDetails.fuelLevel %>%</p>
  <% } %>
</div>

<%- include('../partials/footer') %>