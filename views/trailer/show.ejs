<%- include('../partials/head') %>
  <%- include('../partials/navbar') %>

    <div class="container mx-auto mt-8">
      <a href="/trailers" rel="noopener noreferrer"
        class="px-4 py-2 bg-slate-700 hover:bg-slate-600 transition-all ease-in capitalize rounded-md text-white">back to all
        trailers</a>
      <div class="mt-8 p-6 bg-white shadow-lg rounded-lg">
        <h1 class="text-4xl font-bold text-gray-800 mb-4">#<%= trailerDetails.number %>
        </h1>
        <h2 class="text-2xl text-gray-600 mb-2 capitalize">
          <%= trailerDetails.trailerType %>
        </h2>
        <p class="text-lg text-gray-700 mb-2 capitalize"><span class="font-semibold">Condition:</span> <%= trailerDetails.condition %>
        </p>
        <p class="text-lg text-gray-700 mb-2"><span class="font-semibold">Load Status:</span> <%= trailerDetails.loaded ? 'Loaded' : 'Empty' %>
        </p>
        <% if (trailerDetails.trailerType==='reefer' ) { %>
          <p class="text-lg text-gray-700 mb-2"><span class="font-semibold">Fuel Level:</span> <%= trailerDetails.fuelLevel %>%</p>
        <% } %>
        <% if (trailerDetails.driverNotes) { %>
          <p class="text-lg text-gray-700 mb-2"><span class="font-semibold">Driver Notes:</span> <%= trailerDetails.driverNotes %></p>
        <% } %>
        <p class="text-lg text-gray-700 mb-2"><span class="font-semibold">Location:</span> <%= trailerDetails.currentLocation %>
      </div>
    </div>


    <%- include('../partials/footer') %>